<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- Spinner positioned at the top of the layout -->
    <Spinner
        android:id="@+id/size_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:entries="@array/table_sizes" />

    <!-- GridLayout positioned with margins to avoid overlap with the Spinner and TextView -->
    <GridLayout
        android:id="@+id/grid_layout"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:layout_gravity="center"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="64dp"
        android:background="#000000"
        android:columnCount="3"
        android:padding="8dp"
        android:rowCount="3" />

    <!-- TextView positioned at the bottom of the layout -->
    <TextView
        android:id="@+id/game_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_margin="16dp"
        android:textSize="24sp"
        android:textColor="#000000"
        android:text="Game Result"/>
</FrameLayout>
